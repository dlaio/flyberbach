<h1>Listing searches</h1>

<div class="span6 offset3">
<table>
  <thead>
    <tr>
      <th>Departure airport</th>
      <th>Departure time</th>
      <th>Arrival airport</th>
      <th>Arrival time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.departure_airport %></td>
        <td><%= search.departure_time %></td>
        <td><%= search.arrival_airport %></td>
        <td><%= search.arrival_time %></td>
        <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
