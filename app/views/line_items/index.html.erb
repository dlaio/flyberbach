<% provide(:title, 'Shopping Cart') %>
<div class="row">
  <div class="span6 offset5">
    <h1>Shopping Cart</h1>
  </div>
</div>

<div class="span10 offset1">
    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Flight</th>
      <th>Cart</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.flight_id %></td>
        <td><%= line_item.cart_id %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

