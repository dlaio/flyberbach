<% provide(:title, 'All Carts') %>
<div class="row">
  <div class="span6 offset5">
    <h1>All Carts</h1>
  </div>
</div>

<div class="span6 offset3">
  <table class="table table-striped table-hover" width = "800">
      <tr>
          <th>Cart ID</th>
          <th>Actions</th>
      </tr>

    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.id %></td>
          <td><%= link_to 'View', cart %> | <%= link_to 'Edit', edit_cart_path(cart) %> | <%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>