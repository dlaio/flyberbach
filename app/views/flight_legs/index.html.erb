<h1>Listing flight_legs</h1>

<table>
  <thead>
    <tr>
      <th>Leg no</th>
      <th>Flight no</th>
      <th>Route</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_legs.each do |flight_leg| %>
      <tr>
        <td><%= flight_leg.leg_no %></td>
        <td><%= flight_leg.flight_no %></td>
        <td><%= flight_leg.route_id %></td>
        <td><%= flight_leg.price %></td>
        <td><%= link_to 'Show', flight_leg %></td>
        <td><%= link_to 'Edit', edit_flight_leg_path(flight_leg) %></td>
        <td><%= link_to 'Destroy', flight_leg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

